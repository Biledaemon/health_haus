
<div class="container" id="profile-container">
  <div class="row px-5 justify-content-center">
    <div class="col">
      <div style= "margin: 10px;"><%= image_tag "https://res.cloudinary.com/hugeyeti/image/upload/v1638398157/Health%20Haus/avatar-health-haus_no0cr5.svg" %></div>
      <div><h3 style= "font-weight: 900; font-size: 24px"> <%= full_name(current_user) %></h3></div>
    </div>
  </div>
  <hr>

  <div class="row px-5 pt-2">
    <div class="col">
      <h3>Your Information</h3>
      <ul>
        <p>Date of Birth: <%= @user.dob %></p>
        <p>E-mail: <%=@user.email %></p>
      </ul>
    </div>
    <div class="col">
      <h3>Your Plan</h3>
      <ul>
        <p>Plan Name:</p>
        <p>Provider:</p>
      </ul>
    </div>
      <div class="col-md-12 text-right mt-2">
        <%= link_to "See Your Contract", new_user_registration_path, class:"button-green" %>
      </div>
  </div>
  <br></br>
  <div class="row px-5 pt-2">
    <div class="col">
      <h3>Plan Summary</h3>
      <ul>
        <p><i class="bi bi-coin"></i> Monthly Cost: <b>$150</b></p>
        <p><i class="bi bi-arrow-up-square"></i> Max Amount Covered: <b>$800</b></p>
        <p><i class="bi bi-scissors"></i> Deductible: <b>$80</b></p>
        <p><i class="bi bi-bandaid"></i> Coverage: <b>95%</b></p>
      </ul>
    </div>
    <div class="col-md-12 text-right mt-2">
      <%= link_to "Contact a Representative", "https://calendly.com/fquintana-4/30min", class:"button-green" %>
    </div>
  </div>
</div>
