
<div class="container" id="profile-container">
  <div class="row px-5 justify-content-center">
    <div class="col">
      <div style= "margin: 10px;"><%= image_tag "https://res.cloudinary.com/hugeyeti/image/upload/v1638398157/Health%20Haus/avatar-health-haus_no0cr5.svg" %></div>
      <div><h3 style= "font-weight: 900; font-size: 24px"> <%= full_name(current_user) %></h3></div>
    </div>
  </div>
  <hr>

  <div class="row px-5 pt-2">
    <div class="col">
      <h3>Your Information</h3>
      <ul>
        <p><%=full_name(current_user) %></p>
        <p>E-mail: <%=@user.email %></p>
      </ul>
    </div>
    <div class="col">
      <h3>Payments</h3>
    </div>
      <div class="col-md-12 text-right mt-2">
        <%= link_to "Add credit card", new_user_registration_path, class:"button-green" %>
      </div>
  </div>
  <br></br>
  <div class="row px-5 pt-2">
    <div class="col">
      <h3>Plan Summary</h3>

      <% @user.contracts.each do |contract|  %>
        <ul>
          <p>🏥 <b>Provider:</b> <%= contract.plan.provider %> </p>
          <p>💵 <b>Monthly Cost:</b>$<%= contract.plan.price %></p>
          <p>🚑 <b>Max Amount Covered: </b>$<%= contract.plan.max_amount %></p>
          <p>🧾 <b>Deductible:</b>$<%= contract.plan.deductible %></p>
          <p>🩹 <b>Coverage:</b><%= contract.plan.deductible %>%</p>
        </ul>
      <%end%>
    </div>
    <div class="col-md-12 text-right mt-2">
      <%= link_to "Contact a Representative", "https://calendly.com/fquintana-4/30min", class:"button-green" %>
    </div>
  </div>
</div>
<>
