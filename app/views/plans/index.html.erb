<div class="container">
  <div class="row mt-5">
    <h2>These plans best fit your needs.</h2>
  </div>

  <div class="card-layout">
    <% @plans.each_slice(2) do |s| %>
      <div class="card-plans" >
        <% s.each do |plan| %>
          <div class="card-plans">
            <div class="card-body">
              <p><strong><%= plan.category %></strong></p>
              <p style= "font-family: 'Poppins', sans-serif; font-weight: 900; color: #212529"><strong> 🏥 <%= plan.provider %></strong></p>
              <hr>
              <div>
                <p class="align-left">💵 Monthly Cost:</p>
                <h4 class="align-right">$<%= plan.price %> </h4>
                <div style="clear: both;"></div>
              </div>
              <div>
                <p class="align-left">🚑 Max Amount Covered: </p>
                <h4 class="align-right">$<%= plan.max_amount %> </h4>
                <div style="clear: both;"></div>
              </div>
              <div>
                <p class="align-left">🧾 Deductible: </p>
                <h4 class="align-right">$<%= plan.deductible %> </h4>
                <div style="clear: both;"></div>
              </div>
              <div>
                <p class="align-left">🩹 Coverage: </p>
                <h4 class="align-right">$<%= plan.coverage_percent %> </h4>
                <div style="clear: both;"></div>
              </div>
              <div class="plan-card-action d-flex justify-content-center">
                <%= link_to 'View Details', plan_path(plan), class: "button-card-index" %>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    <% end %>
  </div>
  <div class="container">
    <div class="row mt-2">
  <%= link_to 'Back to Search', search_plans_path, class: "button-green" %>
  </div>
  </div>
</div>
