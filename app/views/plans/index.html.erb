<div class="container">
  <h3><strong>These plans are the best fit for you #NAME</strong></h3>
  <% @plans.each_slice(2) do |s| %>
    <div class="row cards pb-3">
      <% s.each do |plan| %>
        <div class="col-3-sm">
          <div class="cards-trip">
            <div>
                <h2> <strong><%= plan.category %></strong></h2>
                <p><strong>Monthly Cost: $<%= plan.price %></strong></p>
                <p><strong>Max Amount Covered: $<%= plan.max_amount %></strong></p>
                <p><strong> Coverage: <%= plan.coverage_percent %></strong></p>
                <p><strong>Deductible: $<%= plan.deductible %></strong></p>
              </div>
              <div class="plan-card-action">
               <%= link_to 'View Details', plan_path(plan) %>
              </div>
          </div>
        </div>
      <%end%>
    </div>
  <% end %>
</div>
