<div class="container">
<h3><%= @plans.count%></h3>
</div>

<div class="container">
  <h4> These are the insurance plans we found for you, {user} </h4>
  <div class="container">
    <% @plans.each_slice(3) do |s| %>
      <div class="row cards pb-3">
        <% s.each do |plan| %>
          <div class="col-4-sm">
            <div class="card-trip">
              <div class="card-trip-infos">
                <div>
                  <h4><strong><%= plan.provider %></strong></h4>
                  <p><strong><%= plan.price %></strong></p>
                  <p><strong><%= plan.max_amount %></strong></p>
                  <p><strong><%= plan.deductible %></strong></p>
                  <p><strong><%= plan.coverage_percent %></strong></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
