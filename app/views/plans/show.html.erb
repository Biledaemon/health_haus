    <div class="col">
      <div class="heading">
        <h2> <strong>Your Plan:</strong></h2>
      </div>
      <div class="card-category-name mb-3">
        <h3><%= @plan.provider %></h3>
      </div>
      <div class="card-category-description mb-3">
        <h3><%= @plan.description %></h3>
      </div>
      <div class="card-category mb-3">
        <h2><strong><%= @plan.price %></strong></h2>
      </div>
      <div class="card-category align-items-center text-align-left">
          <ul>
            <li> Max Amount Covered: $<%= @plan.max_amount %> </li>
            <li> Deductible: $<%= @plan.deductible %> </li>
            <li> Coverage: <%= @plan.coverage_percent %> </li>
          </ul>
      </div>
      </div>
      <div class="col">
        <div class="plan-card-action">
          <%= link_to 'Review Contract', new_plan_contract_path(@plan), id:"new-contract", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

